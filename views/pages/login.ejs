<% layout('../partials/layout') -%>
<% block('ad', partial('../partials/ad')) -%>
<div class="login">
  <h2>Rainbow 餐廳</h2>
  <p>享受美食好味道</p>
  <section>
    <h3>LOGIN</h3>
    <div class="form">
      <form id="form" action="/">
        <div class="email">
          <label for="email">Email Address*</label>
          <input type="email" name="email" id="email">
        </div>
        <div class="password">
          <label for="password">Password*</label>
          <input type="password" name="password" id="password">
        </div>
        <div>
          <a href="">忘記密碼？</a>
        </div>
        <div class="button">
          <a class="a-button" href="/register">註冊</a>
          <button type="button" class="submit">登入</button>
        </div>
      </form> 
    </div>
  </section>
</div>
<% script('/js/login.js') -%>